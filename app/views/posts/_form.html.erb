<div class="container mt-4">
  <h1 class="mb-4">New Post</h1>

  <%= form_with(model: @post, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
    </div>

    <div class="mb-3">
      <%= form.label :content, class: 'form-label' %>
      <%= form.text_area :content, class: 'form-control', rows: 5, placeholder: 'Enter content' %>
    </div>

    <div class="d-grid">
      <%= form.submit 'Create Post', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Back to Posts', posts_path, class: 'btn btn-secondary' %>
  </div>
</div>
